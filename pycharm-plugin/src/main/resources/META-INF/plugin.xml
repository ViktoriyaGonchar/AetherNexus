    <depends>com.intellij.modules.python</depends>
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Tool Window -->
        <toolWindow id="AetherNexus" 
                    secondary="false" 
                    anchor="left" 
                    factoryClass="com.aethernexus.ui.AetherNexusToolWindowFactory"/>

        <!-- Actions -->
        <action id="AetherNexus.ExplainCode" 
                class="com.aethernexus.actions.ExplainCodeAction" 
                text="Explain this code" 
                description="Explain selected code using AetherNexus">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt E"/>
        </action>

        <action id="AetherNexus.FindRelated" 
                class="com.aethernexus.actions.FindRelatedAction" 
                text="Find related tickets" 
                description="Find related tickets, PRs and documentation">
            <add-to-group group-id="EditorPopupMenu" anchor="after" relative-to-action="AetherNexus.ExplainCode"/>
        </action>

        <action id="AetherNexus.SearchDocumentation" 
                class="com.aethernexus.actions.SearchDocumentationAction" 
                text="Search documentation" 
                description="Search project documentation">
            <add-to-group group-id="EditorPopupMenu" anchor="after" relative-to-action="AetherNexus.FindRelated"/>
        </action>

        <action id="AetherNexus.GenerateDocs" 
                class="com.aethernexus.actions.GenerateDocsAction" 
                text="Generate documentation" 
                description="Generate documentation for selected code">
            <add-to-group group-id="EditorPopupMenu" anchor="after" relative-to-action="AetherNexus.SearchDocumentation"/>
        </action>

        <!-- Settings -->
        <applicationConfigurable parentId="tools" 
                                 instance="com.aethernexus.settings.AetherNexusConfigurable" 
                                 id="AetherNexus.Settings" 
                                 displayName="AetherNexus"/>
    </extensions>

    <applicationListeners>
        <listener class="com.aethernexus.listeners.ProjectOpenListener" 
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>

    <actions>
        <action id="AetherNexus.ShowToolWindow" 
                class="com.aethernexus.actions.ShowToolWindowAction" 
                text="Show AetherNexus" 
                description="Show AetherNexus tool window">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt A"/>
        </action>
    </actions>
</idea-plugin>

